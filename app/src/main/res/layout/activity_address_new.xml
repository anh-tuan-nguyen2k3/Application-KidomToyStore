<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddressNewActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbNewAddress"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@drawable/ic_back"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm địa chỉ mới"
            android:fontFamily="@font/baloopaaji2bold"
            android:textColor="@color/greyscale_900"
            android:textSize="24sp" />
    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:layout_marginTop="24dp"
        android:id="@+id/edtFullName"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/input_field_custom"
        android:hint="Họ và tên"
        android:fontFamily="@font/baloopaaji2regular"
        android:textSize="16sp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:paddingStart="20dp"
        android:textColorHint="@color/greyscale_500"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/input_field_custom"
        android:hint="@string/str_phone"
        android:fontFamily="@font/baloopaaji2regular"
        android:textSize="16sp"
        android:paddingStart="20dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:textColorHint="@color/greyscale_500"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        android:inputType="phone"/>


    <EditText
        android:id="@+id/edtAddress"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/input_field_custom"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:hint="Đia chỉ cụ thể"
        android:fontFamily="@font/baloopaaji2regular"
        android:textSize="16sp"
        android:paddingStart="20dp"
        android:textColorHint="@color/greyscale_500"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        android:inputType="text"/>


    <EditText
        android:id="@+id/edtAddressType"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/input_field_custom"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:hint="Loại địa chỉ"
        android:fontFamily="@font/baloopaaji2regular"
        android:textSize="16sp"
        android:paddingStart="20dp"
        android:textColorHint="@color/greyscale_500"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        android:inputType="text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="24dp"
        android:gravity="center|bottom"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:indeterminateDrawable="@drawable/my_progress_indeterminate"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="@null"
            android:background="@drawable/button_disable"
            android:text="Thêm"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:fontFamily="@font/baloopaaji2bold"
            android:layout_gravity="center_horizontal|center"/>
    </LinearLayout>

</LinearLayout>