<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border_grey"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imvDeliveryIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/economical_method"
            android:layout_margin="12dp"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtDeliveryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiet kiem"
                android:textSize="18sp"
                android:fontFamily="@font/baloopaaji2semibold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txtDeliveryDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian giao hàng dự kiến: 2 ngay"
                android:textSize="12sp"
                android:fontFamily="@font/baloopaaji2regular"
                android:textColor="@color/black"/>

        </LinearLayout>
        <TextView
            android:id="@+id/txtDeliveryPrice"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/baloopaaji2bold"
            android:textColor="@color/primary_500"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:gravity="right"/>

    </LinearLayout>

</LinearLayout>