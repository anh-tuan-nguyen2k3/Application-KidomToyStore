<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ForgotPasswordOTP"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@drawable/ic_back"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu"
            android:fontFamily="@font/baloopaaji2bold"
            android:textColor="@color/greyscale_900"
            android:textSize="24sp" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"
            android:layout_marginBottom="24dp"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Mã OTP đã được gửi đến "
                android:fontFamily="@font/baloopaaji2medium"
                android:textColor="@color/black"
                android:textSize="19sp"/>

            <TextView
                android:id="@+id/txtReceivedPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:fontFamily="@font/baloopaaji2bold"
                android:textColor="@color/primary_500"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.5">
            <EditText
                android:id="@+id/opt1"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:background="@drawable/input_field_custom"
                android:inputType="number"
                android:textColor="@color/black"
                android:fontFamily="@font/baloopaaji2bold"
                android:textSize="24sp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/opt2"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/input_field_custom"
                android:inputType="number"
                android:textColor="@color/black"
                android:fontFamily="@font/baloopaaji2bold"
                android:textSize="24sp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/opt3"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/input_field_custom"
                android:inputType="number"
                android:textColor="@color/black"
                android:fontFamily="@font/baloopaaji2bold"
                android:textSize="24sp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/opt4"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/input_field_custom"
                android:inputType="number"
                android:textColor="@color/black"
                android:fontFamily="@font/baloopaaji2bold"
                android:textSize="24sp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/opt5"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/input_field_custom"
                android:inputType="number"
                android:textColor="@color/black"
                android:fontFamily="@font/baloopaaji2bold"
                android:textSize="24sp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/opt6"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/input_field_custom"
                android:inputType="number"
                android:textColor="@color/black"
                android:fontFamily="@font/baloopaaji2bold"
                android:textSize="24sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="0.2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Chưa nhận được mã OTP? "
                android:fontFamily="@font/baloopaaji2medium"
                android:textColor="@color/greyscale_900"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/txtResendOTP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Gửi lại mã"
                android:fontFamily="@font/baloopaaji2medium"
                android:textColor="@color/primary_500"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:indeterminateDrawable="@drawable/my_progress_indeterminate"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnAuth"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:backgroundTint="@null"
                android:background="@drawable/button_available"
                android:text="Xác thực"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/baloopaaji2bold"
                android:layout_gravity="center_horizontal"
                android:layout_margin="24dp"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>