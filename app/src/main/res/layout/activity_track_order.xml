<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.TrackOrderActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:orientation="vertical"
        android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tbTrackOrder"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="5dp"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="@drawable/ic_back">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Theo dõi đơn hàng"
                android:fontFamily="@font/baloopaaji2bold"
                android:textColor="@color/greyscale_900"
                android:textSize="24sp" />
        </androidx.appcompat.widget.Toolbar>
        <!--END HEADER-->


        <!--product-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                android:elevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewDetail"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:elevation="2dp"
                        app:cardCornerRadius="20dp">
                        <ImageView
                            android:id="@+id/imvReviewThumb"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp">
                        <TextView
                            android:id="@+id/txtReviewName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tên sản phẩm"
                            android:textColor="@color/greyscale_900"
                            android:textSize="16sp"
                            android:layout_gravity="start"
                            android:fontFamily="@font/baloopaaji2bold"/>

                        <TextView
                            android:id="@+id/txtReviewQty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Số lượng:"
                            android:textColor="@color/greyscale_700"
                            android:textSize="12sp"
                            android:layout_gravity="start"
                            android:fontFamily="@font/baloopaaji2medium"/>

                        <TextView
                            android:id="@+id/txtReviewPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:text="đ180.000"
                            android:textColor="@color/primary_500"
                            android:textSize="18sp"
                            android:fontFamily="@font/baloopaaji2bold"
                            android:layout_marginTop="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="24dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/package_order"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/circle_check_box"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <View
                android:layout_width="45dp"
                android:layout_height="5dp"
                android:background="@drawable/dashed_line"
                android:layout_marginTop="55dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/shipping_truck"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/circle_check_box"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <View
                android:layout_width="45dp"
                android:layout_height="5dp"
                android:background="@drawable/dashed_line"
                android:layout_marginTop="55dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/received_order"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/circle_check_box"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <View
                android:layout_width="45dp"
                android:layout_height="5dp"
                android:background="@drawable/dashed_line"
                android:layout_marginTop="55dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/open_box"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/circle_check_box"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <!--Track order detail-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin vận chuyển"
            android:textSize="20sp"
            android:textColor="@color/greyscale_900"
            android:fontFamily="@font/baloopaaji2bold"/>

        <!--track_order_inf-->
        <LinearLayout
            android:id="@+id/trackOrderInf"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/radio_check"
                    android:layout_gravity="center" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã đến trạm giao hàng - 17/12"
                        android:textColor="@color/greyscale_900"
                        android:textSize="14sp"
                        android:fontFamily="@font/baloopaaji2bold"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đơn hàng đã đến trạm giao hàng Quận Thủ Đức"
                        android:textColor="@color/greyscale_700"
                        android:textSize="12sp"
                        android:fontFamily="@font/baloopaaji2medium"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15:20 PM"
                    android:textColor="@color/greyscale_700"
                    android:textSize="12sp"
                    android:fontFamily="@font/baloopaaji2medium"
                    android:layout_weight="0"/>
            </LinearLayout>
            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="2dp"
                android:layout_height="25dp"
                android:layout_marginStart="14sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/radio_check"
                    android:layout_gravity="center" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã rời khỏi trung tâm trung chuyển - 16/12"
                        android:textColor="@color/greyscale_900"
                        android:textSize="14sp"
                        android:fontFamily="@font/baloopaaji2bold"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đơn hàng của bạn đã rời khỏi trung tâm trung chuyển Quận Thanh Xuân"
                        android:textColor="@color/greyscale_700"
                        android:textSize="12sp"
                        android:fontFamily="@font/baloopaaji2medium"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:40 PM"
                    android:textColor="@color/greyscale_700"
                    android:textSize="12sp"
                    android:fontFamily="@font/baloopaaji2medium"
                    android:layout_weight="0"/>
            </LinearLayout>
            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="2dp"
                android:layout_height="25dp"
                android:layout_marginStart="14sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/radio_check"
                    android:layout_gravity="center" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã đến trung tâm trung chuyển - 15/12"
                        android:textColor="@color/greyscale_900"
                        android:textSize="14sp"
                        android:fontFamily="@font/baloopaaji2bold"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đơn hàng của bạn đã đến trung tâm trung chuyển Quận Thanh Xuân"
                        android:textColor="@color/greyscale_700"
                        android:textSize="12sp"
                        android:fontFamily="@font/baloopaaji2medium"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:30 AM"
                    android:textColor="@color/greyscale_700"
                    android:textSize="12sp"
                    android:fontFamily="@font/baloopaaji2medium"
                    android:layout_weight="0"/>
            </LinearLayout>
            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="2dp"
                android:layout_height="25dp"
                android:layout_marginStart="14sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/radio_check"
                    android:layout_gravity="center" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đang được chuẩn bị - 15/12"
                        android:textColor="@color/greyscale_900"
                        android:textSize="14sp"
                        android:fontFamily="@font/baloopaaji2bold"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Người bán đang chuẩn bị hàng"
                        android:textColor="@color/greyscale_700"
                        android:textSize="12sp"
                        android:fontFamily="@font/baloopaaji2medium"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:25 AM"
                    android:textColor="@color/greyscale_700"
                    android:textSize="12sp"
                    android:fontFamily="@font/baloopaaji2medium"
                    android:layout_weight="0"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"
            android:layout_marginTop="15dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnReturnOrder"
                android:layout_width="170dp"
                android:layout_height="56dp"
                android:background="@drawable/button_unselected_light_red"
                android:text="Trả hàng"
                android:textSize="19sp"
                android:textAllCaps="false"
                android:textColor="@color/primary_500"
                android:fontFamily="@font/baloopaaji2bold" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnComplete"
                android:layout_width="170dp"
                android:layout_height="56dp"
                android:background="@drawable/button_orange"
                android:text="Đã nhận hàng"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/baloopaaji2bold"
                android:layout_marginStart="20dp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>

