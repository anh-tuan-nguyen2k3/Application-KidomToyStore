<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SeachResultActivity"
    android:padding="24dp"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/input_field"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <EditText
                android:id="@+id/edtSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/baloopaaji2regular"
                android:hint="Nhập ngay mã BANMOI để giảm 10%"
                android:lineBreakWordStyle="none"
                android:padding="12sp"
                android:textSize="14sp"
                android:singleLine="true"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/imvSearch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_search"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kết quả tìm kiếm"
            android:textSize="20sp"
            android:fontFamily="@font/baloopaaji2bold"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtnumOfResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="16sp"
            android:fontFamily="@font/baloopaaji2bold"
            android:textStyle="bold"
            android:textColor="@color/primary_500"
            android:layout_marginRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kết quả"
            android:textSize="16sp"
            android:fontFamily="@font/baloopaaji2bold"
            android:textStyle="bold"
            android:textColor="@color/primary_500"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        android:weightSum="3">
        <LinearLayout
            android:id="@+id/bestSell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_field"
            android:padding="8dp"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/imvIconStar"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_star_blank"/>

            <TextView
                android:id="@+id/txtBestSell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="Bán chạy"
                android:textColor="@color/black"
                android:fontFamily="@font/baloopaaji2regular"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnPriceDropList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_field"
            android:padding="8dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/imvArrow"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_arrow_swap"/>
            <TextView
                android:id="@+id/txtPriceDrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/baloopaaji2regular"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_field"
            android:padding="8dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/imvArrowRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_swap"/>
            <TextView
                android:id="@+id/txtRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đánh giá"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/baloopaaji2regular"
                />
        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProduct1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/layoutnull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img_nullproduct"
            android:layout_marginBottom="24dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Không tìm thấy kết quả nào"
            android:fontFamily="@font/baloopaaji2bold"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Từ khoá bạn nhập không tìm thấy sản phẩm tương ứng."
            android:fontFamily="@font/baloopaaji2regular"
            android:textSize="14sp"
            android:gravity="center"
            />


    </LinearLayout>


</LinearLayout>